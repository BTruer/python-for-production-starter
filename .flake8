[flake8]
# Recommend matching the black default line length of 88,
# rather than the flake8 default of 79:
max-line-length = 88
extend-ignore =
    # See https://github.com/PyCQA/pycodestyle/issues/373
    E203

# List top-level packages to allow application-local packages to be correctly identified
# Supported styles documented here: https://github.com/PyCQA/flake8-import-order#styles
import-order-style = pycharm

exclude =
    # Defaults. If anything else is defined here they get overwritten, so they must be relisted
    .svn,CVS,.bzr,.hg,.git,__pycache__,.tox,.eggs,*.egg,
    # No need to traverse generated terraform files.
    .terraform

